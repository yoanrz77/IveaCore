@model IVEACore.Models.IndicatorSpecificity

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Indicator Specificity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_Indicator" class="control-label"></label>
                @Html.DropDownListFor(model => model.Id_Indicator, ViewBag.Id_Indicator as SelectList, "-- Select --", new { @class = "form-control" })
                <span asp-validation-for="Id_Indicator" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Specificity" class="control-label"></label>
                <input asp-for="Specificity" class="form-control" />
                <span asp-validation-for="Specificity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
