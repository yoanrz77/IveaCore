@model List<IVEACore.Models.FarmAndFarmSamplingsViewModel>

@{
    ViewData["Title"] = "Samplings by farm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ivea Index</h1>

@*<a href="/FarmAndFarmSamplings/PrintIveaPDF" class="btn  btn-success"> PDF</a>*@

<table id="ivea" class="table">
    <thead>
        <tr>
            <th>
                Farm Name
            </th>
            <th>
                Date
            </th>
            <th>
                First Name Farmer
            </th>
            <th>
                Last Name Farmer
            </th>
            <th>
                Ivea
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FarmName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateSampling)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstNameFarmer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastNameFarmer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ivea)
                </td>
            </tr>
        }
    </tbody>
</table>

<hr color="blue" />
<b>
    <a asp-action="PrintIveaPDF">Print to PDF</a>
</b>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#ivea").DataTable();
        });
    </script>
}
